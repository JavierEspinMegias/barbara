<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg4"
    tools:context=".Inicio">

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="104dp"
        android:layout_marginTop="448dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/isReg"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace"
            android:text="@string/isReg"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <Button
            android:id="@+id/registro"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:background="@color/transBoton"
            android:fontFamily="monospace"
            android:onClick="goRegistro"
            android:text="@string/registrarse"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="185dp"
        android:layout_marginTop="84dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/email"
            android:layout_width="309dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/transBoton"
            android:ems="10"
            android:fontFamily="monospace"
            android:gravity="left|center_vertical"
            android:inputType="textEmailAddress"
            android:onClick="vaciaTextoEmail"
            android:paddingLeft="12dp"
            android:text="@string/email"
            android:textAlignment="gravity"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/aceptar"
            android:textDirection="inherit"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="229dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:background="@color/transBoton"
            android:ems="10"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:onClick="vaciaTextoPass"
            android:paddingLeft="12dp"
            android:text="@string/pass"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/aceptar"
            android:textDirection="inherit"
            android:textSize="16dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="22dp"
            android:background="@color/transBoton"
            android:fontFamily="monospace"
            android:onClick="login"
            android:text="@string/login"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/aceptar"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>